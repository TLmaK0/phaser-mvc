{
  "version": "1.6.2",
  "compilerOptions": {
    "noImplicitReturns": true,
    "target": "es5", 
    "module": "commonjs",
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "."
